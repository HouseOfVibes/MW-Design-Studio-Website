<style>
  :root {
    --mw-navy: #1E3A8A;
    --mw-teal: #4FD1C7;
    --mw-gradient: linear-gradient(135deg, #1E3A8A 0%, #4FD1C7 100%);
    --light-gray: #F8F9FA;
    --neutral-bg: #FAFBFC;
    --dark-text: #333333;
    --medium-gray: #666666;
    --light-border: #E2E8F0;
  }

  .resource-hero {
    background: var(--mw-gradient);
    color: white;
    padding: 6rem 0 4rem;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .breadcrumb {
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .breadcrumb a {
    color: white;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .resource-hero h1 {
    font-size: 3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    font-weight: 300;
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .resource-preview {
    padding: 4rem 0;
    background: var(--neutral-bg);
  }

  .preview-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .preview-content h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 2rem;
  }

  .feature-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }

  .feature-icon {
    background: var(--mw-teal);
    color: white;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .feature-text h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--dark-text);
    margin-bottom: 0.5rem;
  }

  .feature-text p {
    color: var(--medium-gray);
    line-height: 1.6;
  }

  .stats-box {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid var(--mw-teal);
    margin: 2rem 0;
  }

  .stats-box h3 {
    color: var(--mw-navy);
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    text-align: center;
  }

  .stat-item {
    padding: 1rem;
  }

  .stat-number {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--mw-navy);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--medium-gray);
    line-height: 1.4;
  }

  .social-proof {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    border-left: 4px solid var(--mw-teal);
    margin-top: 2rem;
  }

  .social-proof p {
    font-style: italic;
    color: var(--dark-text);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .social-proof cite {
    color: var(--medium-gray);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .form-section {
    position: sticky;
    top: 2rem;
  }

  .form-container {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--light-border);
  }

  .form-container h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .form-subtitle {
    color: var(--medium-gray);
    text-align: center;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .form-wrapper {
    background: var(--light-gray);
    border-radius: 10px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .lead-form {
    border: none;
    display: block;
  }

  .trust-indicators {
    text-align: center;
  }

  .privacy-note,
  .download-note {
    font-size: 0.85rem;
    color: var(--medium-gray);
    margin: 0.5rem 0;
  }

  .cta-section {
    padding: 4rem 0;
    background: white;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.1rem;
    color: var(--medium-gray);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    margin: 0.5rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--mw-gradient);
    color: white;
    box-shadow: 0 4px 20px rgba(30, 58, 138, 0.2);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(30, 58, 138, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--mw-navy);
    border: 2px solid var(--mw-navy);
  }

  .btn-secondary:hover {
    background: var(--mw-navy);
    color: white;
  }

  @media (max-width: 1024px) {
    .preview-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .form-section {
      position: static;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .resource-hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .container {
      padding: 0 1rem;
    }

    .form-container {
      padding: 1.5rem;
    }
  }
</style>