---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
---

<Layout title="Our Process - MW Design Studio">
  <SEO 
    title="Our Process - MW Design Studio"
    description="Learn about our proven strategic approach for brand development, marketing strategy, and social media management. Clear timelines, defined deliverables."
    keywords="design process, brand development process, marketing strategy process, social media process, project workflow"
  />
  
  <main>
    <!-- Hero Section -->
    <section class="process-hero">
      <div class="hero-container">
        <nav class="breadcrumb">
          <a href="/">Home</a> > Process
        </nav>
        <h1 class="hero-title">Our Proven Process</h1>
        <p class="hero-subtitle">Structured approaches that transform your business through strategic design and marketing</p>
      </div>
    </section>

    <!-- Service Selection -->
    <section class="service-selection">
      <div class="container">
        <h2 class="section-title">Choose Your Service Journey</h2>
        <p class="section-subtitle">Each service follows a proven process tailored to deliver specific results</p>
        <div class="service-tabs">
          <button class="service-tab active" data-service="brand">Brand Development</button>
          <button class="service-tab" data-service="marketing">Marketing Strategy</button>
          <button class="service-tab" data-service="social">Social Media Management</button>
        </div>
      </div>
    </section>

    <!-- Brand Development Process -->
    <section class="process-content active" data-service="brand">
      <div class="container">
        <div class="process-header">
          <h2>Brand Development Process</h2>
          <p class="process-tagline">A proven 4-phase approach that transforms your business into a memorable brand</p>
        </div>

        <!-- Process Timeline Visual -->
        <div class="process-visual">
          <div class="timeline-step active">
            <span class="step-label">Discovery</span>
            <span class="step-time">Weeks 1-2</span>
          </div>
          <div class="timeline-connector"></div>
          <div class="timeline-step">
            <span class="step-label">Strategy</span>
            <span class="step-time">Weeks 3-4</span>
          </div>
          <div class="timeline-connector"></div>
          <div class="timeline-step">
            <span class="step-label">Design</span>
            <span class="step-time">Weeks 5-8</span>
          </div>
          <div class="timeline-connector"></div>
          <div class="timeline-step">
            <span class="step-label">Launch</span>
            <span class="step-time">Weeks 9-10</span>
          </div>
        </div>

        <!-- Phase Details -->
        <div class="phase-details">
          <!-- Phase 1: Discovery -->
          <div class="phase-card">
            <div class="phase-header">
              <span class="phase-number">Phase 1</span>
              <h3>Brand Discovery</h3>
              <span class="phase-duration">Weeks 1-2</span>
            </div>
            
            <div class="phase-content">
              <div class="phase-section">
                <h4>What We Do:</h4>
                <div class="activity-group">
                  <h5>Comprehensive Business Analysis</h5>
                  <ul>
                    <li>Current brand audit and assessment</li>
                    <li>Competitive landscape review</li>
                    <li>Market position evaluation</li>
                    <li>Internal stakeholder interviews</li>
                  </ul>
                </div>
                <div class="activity-group">
                  <h5>Target Audience Deep Dive</h5>
                  <ul>
                    <li>Customer research and persona development</li>
                    <li>Pain point identification</li>
                    <li>Buying behavior analysis</li>
                    <li>Market segmentation</li>
                  </ul>
                </div>
                <div class="activity-group">
                  <h5>Brand Foundation Exploration</h5>
                  <ul>
                    <li>Core values identification</li>
                    <li>Mission and vision clarification</li>
                    <li>Unique value proposition development</li>
                    <li>Brand personality definition</li>
