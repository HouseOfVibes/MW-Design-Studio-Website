    text-decoration: underline;
  }

  .hero-section h1 {
    font-size: 3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .lead {
    font-size: 1.25rem;
    margin-top: 1rem;
  }

  /* Interactive Business Name Generator */
