    padding: 4rem 0;
    background: white;
  }

  .tool-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .tool-header h2 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 1rem;
  }

  .tool-header p {
    font-size: 1.1rem;
    color: var(--medium-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .name-generator {
    background: var(--neutral-bg);
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    max-width: 900px;
    margin: 0 auto;
  }

  .generator-inputs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
  }

  .input-group label {
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .input-group input,
  .input-group select {
    padding: 0.75rem;
    border: 2px solid var(--light-border);
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
    background: white;
  }

  .input-group input:focus,
  .input-group select:focus {
    outline: none;
    border-color: var(--mw-teal);
  }

  .generate-button {
    grid-column: 1 / -1;
    background: var(--mw-gradient);
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    justify-self: center;
    min-width: 200px;
  }

  .generate-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(30, 58, 138, 0.3);
  }

  .generate-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .generator-results {
    margin-top: 2rem;
  }

  .results-hidden {
    display: none;
  }

  .results-visible {
    display: block;
    animation: fadeInUp 0.5s ease;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .generator-results h3 {
    color: var(--mw-navy);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .name-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .name-suggestion {
    background: white;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    border: 2px solid var(--light-border);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .name-suggestion:hover {
    border-color: var(--mw-teal);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(79, 209, 199, 0.2);
  }

  .name-suggestion.favorited {
    border-color: var(--mw-navy);
    background: var(--light-gray);
  }

  .name-text {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 0.25rem;
  }

  .name-description {
    font-size: 0.8rem;
    color: var(--medium-gray);
  }

  .results-footer {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 2px solid var(--light-border);
  }

  .disclaimer {
    font-size: 0.85rem;
    color: var(--medium-gray);
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
  }

  .btn-primary {
    background: var(--mw-gradient);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
  }

  .btn-secondary {
    background: white;
    color: var(--mw-navy);
    border: 2px solid var(--mw-navy);
  }

  .btn-secondary:hover {
    background: var(--mw-navy);
    color: white;
  }

  .featured-resources {
    padding: 4rem 0;
    background: var(--neutral-bg);
  }

  .featured-resources h2 {
    text-align: center;
    font-size: 2.5rem;
