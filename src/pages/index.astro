---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
---

<Layout title="MW Design Studio - Brand, Marketing & Social Media That Actually Converts">
  <SEO 
    title="MW Design Studio - Brand, Marketing & Social Media That Actually Converts"
    description="We help ambitious small businesses stand out, connect with customers, and grow through strategic design and marketing. Focus on your craft while we handle the rest."
    keywords="brand design, marketing strategy, social media management, small business marketing, brand identity"
  />
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-container">
      <div class="hero-content">
        <div class="hero-badge">Transform Your Business Today</div>
        <h1 class="hero-title">Brand, Marketing & Social Media That Actually Converts</h1>
        <p class="hero-subtitle">We help ambitious small businesses stand out, connect with customers, and grow through strategic design and marketing. Focus on your craft while we handle the rest.</p>
        <a href="/contact" class="hero-cta">Complete Your Intake Form →</a>
      </div>
      <div class="hero-visual">
        <div class="hero-graphic"></div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators Section -->
  <section class="trust-section">
    <div class="container">
      <div class="trust-indicators">
        <div class="trust-item">
          <div class="trust-icon">C</div>
          <h4>100% Custom Designs</h4>
          <p>No templates. Every design is created specifically for your brand.</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">R</div>
          <h4>Results-Driven Approach</h4>
          <p>We focus on designs and strategies that convert visitors into customers.</p>
        </div>
        <div class="trust-item">
          <div class="trust-icon">S</div>
          <h4>White-Glove Service</h4>
          <p>Dedicated support throughout your project and beyond.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Teaser Section -->
  <section class="faq-section">
    <div class="container">
      <div class="faq-teaser">
        <h3 class="faq-title">Quick Questions? Quick Answers.</h3>
        <div class="faq-grid">
          <div class="faq-item">
            <h4 class="faq-question">Will this work for my industry?</h4>
            <p class="faq-answer">Absolutely. We've helped restaurants, fitness studios, consultants, service businesses, and more.</p>
          </div>
          <div class="faq-item">
            <h4 class="faq-question">How long does it take?</h4>
            <p class="faq-answer">Most projects complete in 2-6 weeks, depending on scope. We'll give you exact timelines upfront.</p>
          </div>
          <div class="faq-item">
            <h4 class="faq-question">What if I'm not happy?</h4>
            <p class="faq-answer">We work until you love it. Your success is our success—we're not done until you're thrilled.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="services">
    <div class="container">
      <div class="section-header">
        <div class="section-badge">Our Services</div>
        <h2 class="section-title">Everything You Need to Grow</h2>
        <p class="section-subtitle">From brand identity to social media strategy, we provide comprehensive solutions that work together to amplify your business.</p>
      </div>
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon">B</div>
          <h3 class="service-title">Brand Services</h3>
          <p class="service-description">Create a brand identity that commands attention and builds trust. From logos to complete visual systems that make your business impossible to ignore.</p>
          <a href="/services/brand-services" class="service-cta">Explore Brand Services →</a>
        </div>
        <div class="service-card">
          <div class="service-icon">M</div>
          <h3 class="service-title">Marketing Services</h3>
          <p class="service-description">Strategic marketing campaigns that turn strangers into customers and customers into raving fans. Data-driven approaches that deliver real results.</p>
          <a href="/services/marketing-services" class="service-cta">View Marketing Solutions →</a>
        </div>
        <div class="service-card">
          <div class="service-icon">S</div>
          <h3 class="service-title">Social Media Services</h3>
          <p class="service-description">Build genuine community and drive business results through strategic content and engagement. Social presence that actually converts.</p>
          <a href="/services/social-media-services" class="service-cta">See Social Success →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Preview -->
  <section id="portfolio" class="portfolio-preview">
    <div class="container">
      <!-- About Preview -->
      <div class="about-preview">
        <div class="about-container">
          <div class="about-content">
            <h3 class="about-title">Meet the Creative Duo Behind MW Design Studio</h3>
            <p class="about-description">We're Sheri McDowell and Tierra White, the creative partnership behind MW Design Studio. Together, we bring complementary skills and shared passion for helping small businesses stand out and grow. We believe every business has a unique story worth telling, and we're here to help you tell yours.</p>
          </div>
          <div class="about-images">
            <div class="founder-photo">
              <div class="about-placeholder">Sheri McDowell</div>
              <span class="founder-role">Co-Founder</span>
            </div>
            <div class="founder-photo">
              <div class="about-placeholder">Tierra White</div>
              <span class="founder-role">Co-Founder</span>
            </div>
          </div>
        </div>
      </div>

      <div class="section-header">
        <div class="section-badge">Our Work</div>
        <h2 class="section-title">Transformations That Inspire</h2>
        <p class="section-subtitle">See how we've helped businesses like yours stand out, grow, and thrive in their markets.</p>
      </div>
      <div class="portfolio-grid">
        <div class="portfolio-item">
          <div class="portfolio-image">
            <img src="/portfolio/Bloom Cafe/Bloom-Cafe-Logo-Example.png" alt="Bloom Cafe Brand Identity" />
          </div>
          <div class="portfolio-content">
            <h3 class="portfolio-title">Bloom Cafe</h3>
            <div class="portfolio-type">Brand Identity & Visual System</div>
            <p class="portfolio-description">Complete brand identity with logo, color palette, and visual guidelines that brought their organic, welcoming vision to life.</p>
          </div>
        </div>
        <div class="portfolio-item">
          <div class="portfolio-image">
            <img src="/portfolio/CloudSync Solutions/Cloudsync_logo.png" alt="CloudSync Solutions Brand Identity" />
          </div>
          <div class="portfolio-content">
            <h3 class="portfolio-title">CloudSync Solutions</h3>
            <div class="portfolio-type">Tech Startup Branding</div>
            <p class="portfolio-description">Modern, professional brand identity that positioned this cloud services company as a trusted industry leader.</p>
          </div>
        </div>
        <div class="portfolio-item">
          <div class="portfolio-image">
            <img src="/portfolio/Momentum Personal Training/Momentum-logo.png" alt="Momentum Personal Training Brand Identity" />
          </div>
          <div class="portfolio-content">
            <h3 class="portfolio-title">Momentum Personal Training</h3>
            <div class="portfolio-type">Fitness Brand Identity</div>
            <p class="portfolio-description">Dynamic brand identity that captures energy and movement, helping them stand out in a competitive fitness market.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="cta-section">
    <div class="container">
      <h2 class="cta-title">Ready to Transform Your Business?</h2>
      <p class="cta-subtitle">Join the businesses that stopped being the best-kept secret in their industry. Let's create something amazing together.</p>
      <a href="/contact" class="cta-button">Complete Your Intake Form</a>
    </div>
  </section>
</Layout>

<style>
  :root {
    /* Map old variables to new color system for compatibility */
    --mw-navy: var(--primary-black);
    --mw-teal: var(--accent-teal);
    --mw-light-teal: var(--accent-teal);
    --mw-accent: var(--accent-blue);
    --mw-gradient: var(--gradient-vibrant);
    --mw-subtle-gradient: linear-gradient(135deg, var(--gray-100) 0%, var(--primary-white) 100%);
    --light-gray: var(--gray-100);
    --neutral-bg: var(--bg-secondary);
    --dark-text: var(--text-primary);
    --medium-gray: var(--text-secondary);
    --light-border: var(--border-light);
    --success: var(--accent-green);
    --warning: var(--accent-yellow);
    --error: var(--accent-red);
    --info: var(--accent-purple);
  }

  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--gray-50) 0%, var(--primary-white) 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(45deg, var(--accent-teal) 0%, transparent 25%),
      linear-gradient(-45deg, var(--accent-purple) 0%, transparent 25%),
      linear-gradient(135deg, var(--accent-pink) 0%, transparent 25%),
      linear-gradient(-135deg, var(--accent-blue) 0%, transparent 25%);
    background-position: 
      bottom left, 
      bottom right,
      top right,
      top left;
    background-size: 
      350px 350px, 
      350px 350px,
      350px 350px,
      350px 350px;
    background-repeat: no-repeat;
    opacity: 0.2;
    pointer-events: none;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-content {
    color: var(--primary-white);
  }

  .hero-badge {
    background: var(--gradient-vibrant);
    color: var(--primary-white);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    display: inline-block;
    margin-bottom: 1.5rem;
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    font-weight: 300;
    margin-bottom: 2rem;
    color: var(--text-secondary);
    opacity: 0.95;
    line-height: 1.6;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-cta {
    background: var(--primary-black);
    color: var(--primary-white);
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: inline-block;
    transition: all 0.3s ease;
    animation: fadeInUp 0.8s ease-out 0.4s both;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    background: var(--accent-teal);
    color: var(--primary-black);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeInRight 0.8s ease-out 0.6s both;
  }

  .hero-graphic {
    width: 100%;
    max-width: 500px;
    height: 400px;
    background: linear-gradient(135deg, var(--accent-teal), var(--accent-purple));
    opacity: 0.2;
    border-radius: 20px;
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .hero-graphic::before {
    content: '';
    width: 200px;
    height: 200px;
    background: var(--accent-teal);
    border-radius: 50%;
    animation: float 3s ease-in-out infinite;
  }

  /* Services Section */
  .services {
    padding: 6rem 0;
    background: var(--primary-white);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    background: var(--accent-teal);
    color: var(--primary-black);
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--primary-white);
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--primary-black);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .service-icon {
    width: 80px;
    height: 80px;
    background: var(--primary-black);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-white);
    box-shadow: 0 4px 12px rgba(30, 58, 138, 0.15);
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .service-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .service-cta {
    color: var(--accent-teal);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .service-cta:hover {
    color: var(--text-primary);
  }

  /* Portfolio Preview */
  .portfolio-preview {
    padding: 5rem 0;
    background: var(--primary-white);
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .portfolio-item {
    background: var(--gray-100);
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .portfolio-item:hover {
    transform: translateY(-5px);
  }

  .portfolio-image {
    height: 250px;
    background: var(--gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 12px 12px 0 0;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    padding: 20px;
  }

  .portfolio-content {
    padding: 1.5rem;
  }

  .portfolio-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .portfolio-type {
    color: var(--accent-teal);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .portfolio-description {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  /* About Preview */
  .about-preview {
    margin-bottom: 4rem;
    padding: 3rem 0;
    background: var(--gray-100);
    border-radius: 20px;
  }

  .about-container {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .about-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .about-description {
    color: var(--text-secondary);
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .about-images {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .founder-photo {
    text-align: center;
  }

  .about-placeholder {
    width: 150px;
    height: 150px;
    background: var(--primary-black);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-white);
    font-weight: 600;
    text-align: center;
    font-size: 0.9rem;
    box-shadow: 0 8px 24px rgba(30, 58, 138, 0.15);
    margin: 0 auto 0.5rem;
  }

  .founder-role {
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Trust Indicators Section */
  .trust-section {
    padding: 4rem 0;
    background: var(--primary-white);
  }

  .trust-indicators {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
    text-align: center;
  }

  .trust-item {
    padding: 2rem 1rem;
  }

  .trust-icon {
    width: 60px;
    height: 60px;
    background: var(--primary-white);
    border: 2px solid var(--light-border);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .trust-item h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .trust-item p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* FAQ Teaser Section */
  .faq-section {
    padding: 5rem 0;
    background: var(--primary-white);
  }

  .faq-teaser {
    padding: 3rem;
    background: var(--primary-black);
    border-radius: 20px;
    color: var(--primary-white);
  }

  .faq-title {
    font-size: 1.8rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .faq-item {
    text-align: center;
  }

  .faq-question {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--mw-light-teal);
  }

  .faq-answer {
    opacity: 0.9;
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: var(--primary-black);
    color: var(--primary-white);
    text-align: center;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    background: var(--accent-teal);
    color: var(--primary-black);
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    background: var(--primary-white);
    color: var(--primary-black);
    box-shadow: 0 10px 30px rgba(79, 209, 199, 0.4);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .portfolio-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 2rem;
    }

    .about-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 2rem;
    }

    .about-title {
      font-size: 1.5rem;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }

    .trust-indicators {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .hero-container {
      padding: 0 1rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }
  }
</style>

<script>
  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Add intersection observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver(function(entries) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);

  // Observe service cards, portfolio items, about section, and FAQ items
  document.querySelectorAll('.service-card, .portfolio-item, .about-preview, .faq-item').forEach(el => {
    el.style.opacity = '0';
    el.style.transform = 'translateY(20px)';
    el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(el);
  });
</script>