---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SEO from '../../components/SEO.astro';
import ShareToFacebook from '../../components/ShareToFacebook.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get related posts (same category, excluding current post)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(post => post.slug !== entry.slug && post.data.category === entry.data.category)
  .slice(0, 3);

const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": entry.data.title,
  "image": entry.data.image?.url || '/blog/default-blog.jpg',
  "author": {
    "@type": "Person",
    "name": entry.data.author
  },
  "datePublished": entry.data.pubDate.toISOString(),
  "description": entry.data.description
};
---

<Layout title={entry.data.title}>
  <SEO 
    title={entry.data.title}
    description={entry.data.description}
    keywords={entry.data.tags?.join(', ') || ''}
    image={entry.data.image?.url}
    author={entry.data.author}
    type="article"
  />
  
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </Fragment>
  
  <main>
    <!-- Article Header -->
    <article class="blog-post">
      <header class="article-header">
        <div class="header-container">
          <nav class="breadcrumb">
            <a href="/">Home</a> > <a href="/blog">Blog</a> > {entry.data.title}
          </nav>
          
          <div class="article-meta">
            <div class="meta-left">
              <span class="category">{entry.data.category}</span>
              <div class="author-date">
                <span class="author">By {entry.data.author}</span>
                <span class="date">{new Date(entry.data.pubDate).toLocaleDateString('en-US', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}</span>
              </div>
            </div>
            
            {entry.data.tags && (
              <div class="article-tags">
                {entry.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </div>
          
          <h1 class="article-title">{entry.data.title}</h1>
          <p class="article-description">{entry.data.description}</p>
        </div>
        
        {entry.data.image?.url && (
          <div class="hero-image">
            <img src={entry.data.image.url} alt={entry.data.image.alt || entry.data.title} />
          </div>
        )}
      </header>

      <!-- Article Content -->
      <section class="article-content">
        <div class="content-container">
          <div class="prose">
            <Content />
          </div>
          
          <!-- Share Section -->
          <div class="article-footer">
            <div class="share-section">
              <h4>Share this article</h4>
              <div class="share-buttons">
                <ShareToFacebook url={Astro.url.href} />
                <a href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(entry.data.title)}`} 
                   target="_blank" rel="noopener" class="share-btn twitter">
                  Share on Twitter
                </a>
                <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`} 
                   target="_blank" rel="noopener" class="share-btn linkedin">
                  Share on LinkedIn
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </article>

    <!-- Related Articles -->
    {relatedPosts.length > 0 && (
      <section class="related-articles">
        <div class="container">
          <div class="section-header">
            <h2>Related Articles</h2>
            <p>Continue reading about {entry.data.category.toLowerCase()}</p>
          </div>
          
          <div class="related-grid">
            {relatedPosts.map((post) => (
              <article class="related-post">
                <div class="post-image">
                  <img src={post.data.image?.url || '/blog/default-blog.jpg'} alt={post.data.image?.alt || post.data.title} />
                  <div class="post-category">{post.data.category}</div>
                </div>
                <div class="post-content">
                  <h3 class="post-title">
                    <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                  </h3>
                  <p class="post-excerpt">{post.data.description}</p>
                  <a href={`/blog/${post.slug}`} class="read-more">Read Article â†’</a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <section class="article-cta">
      <div class="container">
        <div class="cta-content">
          <h2>Ready to Transform Your Business?</h2>
          <p>Let's discuss how MW Design Studio can help elevate your brand with strategic design and marketing.</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn-primary">Start Your Project</a>
            <a href="/blog" class="btn-secondary">Read More Articles</a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  :root {
    --mw-navy: var(--primary-black);
    --mw-teal: var(--accent-teal);
    --mw-gradient: var(--gradient-vibrant);
    --light-gray: var(--gray-100);
    --neutral-bg: var(--bg-secondary);
    --dark-text: var(--text-primary);
    --medium-gray: var(--text-secondary);
    --light-border: var(--border-light);
  }

  /* Article Header */
  .article-header {
    background: var(--mw-gradient);
    color: white;
    padding: 6rem 0 4rem;
    position: relative;
  }

  .header-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
  }

  .breadcrumb {
    margin-bottom: 2rem;
    opacity: 0.9;
    font-size: 0.9rem;
  }

  .breadcrumb a {
    color: white;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .meta-left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .category {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .author-date {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .author {
    font-weight: 600;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }

  .article-title {
    font-size: 3rem;
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .article-description {
    font-size: 1.25rem;
    font-weight: 300;
    opacity: 0.95;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .hero-image {
    margin-top: 3rem;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Article Content */
  .article-content {
    padding: 6rem 0;
    background: white;
  }

  .content-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Prose Styles */
  .prose {
    line-height: 1.8;
    font-size: 1.1rem;
    color: var(--dark-text);
  }

  .prose h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin: 3rem 0 1.5rem 0;
    line-height: 1.3;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin: 2.5rem 0 1rem 0;
    line-height: 1.3;
  }

  .prose p {
    margin-bottom: 1.5rem;
    color: var(--dark-text);
  }

  .prose ul, .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
    color: var(--dark-text);
  }

  .prose strong {
    font-weight: 600;
    color: var(--mw-navy);
  }

  .prose a {
    color: var(--mw-teal);
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .prose a:hover {
    border-bottom-color: var(--mw-teal);
  }

  .prose blockquote {
    border-left: 4px solid var(--mw-teal);
    padding-left: 2rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--medium-gray);
    background: var(--light-gray);
    padding: 1.5rem 2rem;
    border-radius: 0 12px 12px 0;
  }

  /* Article Footer */
  .article-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--light-border);
  }

  .share-section h4 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--mw-navy);
    margin-bottom: 1rem;
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .share-btn {
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .share-btn.twitter {
    background: #1DA1F2;
    color: white;
  }

  .share-btn.linkedin {
    background: #0077B5;
    color: white;
  }

  .share-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  /* Related Articles */
  .related-articles {
    padding: 6rem 0;
    background: var(--neutral-bg);
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--dark-text);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-header p {
    font-size: 1.1rem;
    color: var(--medium-gray);
    line-height: 1.6;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .related-post {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .related-post:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 35px rgba(0, 0, 0, 0.12);
  }

  .related-post .post-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .related-post .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .related-post:hover .post-image img {
    transform: scale(1.05);
  }

  .post-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--mw-teal);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .related-post .post-content {
    padding: 1.5rem;
  }

  .related-post .post-title a {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--dark-text);
    text-decoration: none;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .related-post .post-title a:hover {
    color: var(--mw-teal);
  }

  .related-post .post-excerpt {
    color: var(--medium-gray);
    line-height: 1.6;
    margin: 1rem 0 1.5rem 0;
    font-size: 0.95rem;
  }

  .related-post .read-more {
    color: var(--mw-teal);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .related-post .read-more:hover {
    color: var(--mw-navy);
    text-decoration: underline;
  }

  /* Article CTA */
  .article-cta {
    padding: 6rem 0;
    background: var(--mw-gradient);
    color: white;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: white;
    color: var(--mw-navy);
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    padding: 1rem 2.5rem;
    border: 2px solid white;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .btn-secondary:hover {
    background: white;
    color: var(--mw-navy);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .related-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .article-header {
      padding: 4rem 0 3rem;
    }

    .header-container {
      padding: 0 1rem;
    }

    .article-title {
      font-size: 2rem;
    }

    .article-description {
      font-size: 1.1rem;
    }

    .article-meta {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .meta-left {
      align-items: center;
    }

    .content-container {
      padding: 0 1rem;
    }

    .prose {
      font-size: 1rem;
    }

    .prose h2 {
      font-size: 1.75rem;
      margin: 2rem 0 1rem 0;
    }

    .prose h3 {
      font-size: 1.25rem;
      margin: 1.5rem 0 0.75rem 0;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .related-articles,
    .article-cta {
      padding: 4rem 0;
    }

    .related-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .share-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .cta-content p {
      font-size: 1.1rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .article-title {
      font-size: 1.75rem;
    }

    .hero-image {
      margin-top: 2rem;
      border-radius: 12px;
    }

    .prose blockquote {
      padding: 1rem;
      margin: 1.5rem 0;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }

    .share-btn {
      padding: 0.625rem 1.25rem;
      font-size: 0.85rem;
    }
  }
</style>