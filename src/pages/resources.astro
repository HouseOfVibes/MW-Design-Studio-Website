<script>
  // Tab functionality
  const tabButtons = document.querySelectorAll('.tab-btn');
  const categoryContents = document.querySelectorAll('.category-content');

  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.dataset.category;
      
      // Update active tab
      tabButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      // Show corresponding content
      categoryContents.forEach(content => {
        content.classList.remove('active');
        if (content.dataset.category === category) {
          content.classList.add('active');
        }
      });
    });
  });

  // Business Name Generator functionality
  const businessNameGenerator = {
    prefixes: {
      technology: ['Tech', 'Digital', 'Cyber', 'Smart', 'Cloud', 'Data', 'Byte', 'Pixel'],
      design: ['Creative', 'Studio', 'Design', 'Visual', 'Art', 'Craft', 'Form', 'Style'],
      consulting: ['Pro', 'Expert', 'Elite', 'Prime', 'Strategic', 'Wise', 'Clear', 'Sharp'],
      health: ['Vital', 'Pure', 'Wellness', 'Care', 'Health', 'Life', 'Strong', 'Fresh'],
      finance: ['Capital', 'Wealth', 'Financial', 'Money', 'Asset', 'Trust', 'Secure', 'Gold'],
      retail: ['Market', 'Shop', 'Store', 'Trade', 'Commerce', 'Sale', 'Deal', 'Buy'],
      food: ['Fresh', 'Taste', 'Flavor', 'Kitchen', 'Gourmet', 'Bistro', 'Cafe', 'Delicious'],
      'real-estate': ['Property', 'Realty', 'Estate', 'Home', 'Land', 'Key', 'Door', 'House'],
      education: ['Learn', 'Teach', 'Smart', 'Bright', 'Knowledge', 'Skill', 'Mind', 'Academy'],
      fitness: ['Fit', 'Strong', 'Active', 'Power', 'Energy', 'Peak', 'Elite', 'Core'],
      beauty: ['Beauty', 'Glow', 'Style', 'Chic', 'Elegant', 'Grace', 'Luxe', 'Pure'],
      home: ['Home', 'House', 'Living', 'Space', 'Comfort', 'Cozy', 'Haven', 'Nest']
    },
    
    suffixes: {
      modern: ['Labs', 'Hub', 'Works', 'Tech', 'Digital', 'Solutions', 'Systems', 'Innovations'],
      classic: ['Company', 'Group', 'Associates', 'Partners', 'Corporation', 'Enterprises', 'Holdings', 'Ventures'],
      creative: ['Studio', 'Collective', 'Workshop', 'Atelier', 'House', 'Lab', 'Space', 'Gallery'],
      descriptive: ['Solutions', 'Services', 'Experts', 'Specialists', 'Consultants', 'Professionals', 'Advisors', 'Partners'],
      abstract: ['Core', 'Edge', 'Flux', 'Nexus', 'Apex', 'Matrix', 'Sphere', 'Zen']
    },
    
    connectors: ['&', 'and', '+', 'Co', 'Co.', '|', '-'],
    
    generateNames(keywords, industry, style) {
      const names = [];
      const keywordList = keywords.toLowerCase().split(/[,\s]+/).filter(k => k.length > 0);
      const prefixes = this.prefixes[industry] || this.prefixes.design;
      const suffixes = this.suffixes[style] || this.suffixes.modern;
      
      // Generate different types of names
      keywordList.forEach(keyword => {
        const capitalizedKeyword = keyword.charAt(0).toUpperCase() + keyword.slice(1);
        
        // Keyword + Suffix combinations
        suffixes.forEach(suffix => {
          names.push({
            name: `${capitalizedKeyword} ${suffix}`,
            type: 'Descriptive'
          });
        });
        
        // Prefix + Keyword combinations
        prefixes.forEach(prefix => {
          names.push({
            name: `${prefix} ${capitalizedKeyword}`,
            type: 'Branded'
          });
        });
      });
      
      // Generate combined keyword names
      if (keywordList.length >= 2) {
        for (let i = 0; i < keywordList.length - 1; i++) {
          for (let j = i + 1; j < keywordList.length; j++) {
            const word1 = keywordList[i].charAt(0).toUpperCase() + keywordList[i].slice(1);
            const word2 = keywordList[j].charAt(0).toUpperCase() + keywordList[j].slice(1);
            
            names.push({
              name: `${word1}${word2}`,
              type: 'Compound'
            });
            
            this.connectors.forEach(connector => {
              names.push({
                name: `${word1} ${connector} ${word2}`,
                type: 'Connected'
              });
            });
          }
        }
      }
      
      // Generate prefix + keyword + suffix combinations
      if (keywordList.length > 0) {
        const randomKeyword = keywordList[Math.floor(Math.random() * keywordList.length)];
        const capitalizedKeyword = randomKeyword.charAt(0).toUpperCase() + randomKeyword.slice(1);
        
        for (let i = 0; i < 3; i++) {
          const randomPrefix = prefixes[Math.floor(Math.random() * prefixes.length)];
          const randomSuffix = suffixes[Math.floor(Math.random() * suffixes.length)];
          
          names.push({
            name: `${randomPrefix} ${capitalizedKeyword} ${randomSuffix}`,
            type: 'Extended'
          });
        }
      }
      
      // Shuffle and return limited set
      return this.shuffleArray(names).slice(0, 12);
    },
    
    shuffleArray(array) {
      const shuffled = [...array];
      for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
      }
      return shuffled;
    }
  };

  // Event listeners for name generator
  document.addEventListener('DOMContentLoaded', function() {
    const generateBtn = document.getElementById('generate-btn');
    const regenerateBtn = document.getElementById('regenerate-btn');
    const keywordsInput = document.getElementById('keywords');
    const industrySelect = document.getElementById('industry');
    const styleSelect = document.getElementById('style');
    const resultsContainer = document.getElementById('results-container');
    const nameSuggestions = document.getElementById('name-suggestions');

    function generateBusinessNames() {
      const keywords = keywordsInput.value.trim();
      const industry = industrySelect.value;
      const style = styleSelect.value;

      if (!keywords) {
        alert('Please enter at least one keyword');
        return;
      }

      generateBtn.disabled = true;
      generateBtn.textContent = 'Generating...';

      setTimeout(() => {
        const names = businessNameGenerator.generateNames(keywords, industry, style);
        displayResults(names);
        
        generateBtn.disabled = false;
        generateBtn.textContent = 'Generate Names';
      }, 1000);
    }

    function displayResults(names) {
      nameSuggestions.innerHTML = '';
      
      names.forEach(nameObj => {
        const nameElement = document.createElement('div');
        nameElement.className = 'name-suggestion';
        nameElement.innerHTML = `
          <div class="name-text">${nameObj.name}</div>
          <div class="name-description">${nameObj.type}</div>
        `;
        
        nameElement.addEventListener('click', () => {
          nameElement.classList.toggle('favorited');
        });
        
        nameSuggestions.appendChild(nameElement);
      });

      resultsContainer.className = 'results-visible';
      resultsContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    generateBtn.addEventListener('click', generateBusinessNames);
    regenerateBtn.addEventListener('click', generateBusinessNames);
    
    keywordsInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        generateBusinessNames();
      }
    });
  });
</script>