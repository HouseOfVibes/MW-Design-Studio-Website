---
import Layout from '../layouts/Layout.astro';
import SEO from '../components/SEO.astro';
---

<Layout title="Portfolio - MW Design Studio">
  <SEO 
    title="Portfolio - MW Design Studio"
    description="Explore our portfolio of successful brand transformations, marketing campaigns, and social media successes. See how we've helped businesses grow."
    keywords="portfolio, case studies, brand design examples, marketing campaigns, social media success"
  />
  
  <main>
    <section class="hero-section">
      <div class="container">
        <h1>Our Portfolio</h1>
        <p class="lead">Transformations that speak louder than words</p>
        <div class="filter-buttons">
          <button class="filter-btn active" data-filter="all">All Projects</button>
          <button class="filter-btn" data-filter="brand">Brand Design</button>
          <button class="filter-btn" data-filter="marketing">Marketing Campaigns</button>
          <button class="filter-btn" data-filter="social">Social Media</button>
        </div>
      </div>
    </section>

    <!-- Bloom Cafe Case Study -->
    <section class="case-study bloom-case" data-category="brand">
      <div class="case-study-header">
        <div class="container">
          <div class="case-intro">
            <h2>Bloom Cafe</h2>
            <p class="case-subtitle">Complete Brand Identity System</p>
            <p class="case-description">Creating a warm, welcoming brand identity for a modern cafe that celebrates community, quality coffee, and the art of gathering.</p>
            <div class="case-stats">
              <div class="stat">
                <span class="stat-number">3</span>
                <span class="stat-label">Logo Variations</span>
              </div>
              <div class="stat">
                <span class="stat-number">5</span>
                <span class="stat-label">Brand Colors</span>
              </div>
              <div class="stat">
                <span class="stat-number">100%</span>
                <span class="stat-label">Brand Consistency</span>
              </div>
            </div>
          </div>
          <div class="case-hero-image">
            <img src="/portfolio/Bloom Cafe/Bloom-Cafe-Logo-Example.png" alt="Bloom Cafe Main Logo" />
          </div>
        </div>
      </div>
      
      <div class="case-study-content">
        <div class="container">
          <div class="asset-showcase">
            <div class="showcase-section">
              <h3>Logo Variations & Applications</h3>
              <div class="logo-gallery">
                <img src="/portfolio/Bloom Cafe/Bloo-Cafe-Logo-Variations.png" alt="Bloom Cafe Logo Variations" />
              </div>
            </div>
            
            <div class="showcase-section">
              <h3>Brand Applications</h3>
              <div class="applications-gallery">
                <img src="/portfolio/Bloom Cafe/Bloom-Cafe-Business card and stationery suites.png" alt="Business Cards and Stationery" />
              </div>
            </div>
            
            <div class="showcase-section">
              <h3>Website Mockup</h3>
              <div class="website-mockup">
                <img src="/portfolio/Bloom Cafe/Bloom-Cafe-website-Mockup.png" alt="Bloom Cafe Website Design" />
              </div>
            </div>
          </div>
          
          <div class="case-actions">
            <a href="/portfolio/Bloom Cafe/Bloom Cafe Brand Guidelines.pdf" target="_blank" class="btn-primary">View Complete Brand Guidelines</a>
            <a href="/contact" class="btn-secondary">Start Your Brand Project</a>
          </div>
        </div>
      </div>
    </section>

    <!-- CloudSync Solutions Case Study -->
    <section class="case-study cloudsync-case" data-category="brand">
      <div class="case-study-header tech-gradient">
        <div class="container">
          <div class="case-intro">
            <h2>CloudSync Solutions</h2>
            <p class="case-subtitle">Tech Brand & Digital Platform</p>
            <p class="case-description">Transforming a cloud technology company with a cutting-edge brand identity and user-centric website that communicates trust and innovation.</p>
            <div class="case-stats">
              <div class="stat">
                <span class="stat-number">Modern</span>
                <span class="stat-label">Tech Identity</span>
              </div>
              <div class="stat">
                <span class="stat-number">Full</span>
                <span class="stat-label">Website Design</span>
              </div>
              <div class="stat">
                <span class="stat-number">Professional</span>
                <span class="stat-label">Brand Guide</span>
              </div>
            </div>
          </div>
          <div class="case-hero-image">
            <img src="/portfolio/CloudSync Solutions/Cloudsync_logo.png" alt="CloudSync Solutions Logo" />
          </div>
        </div>
      </div>
      
      <div class="case-study-content">
        <div class="container">
          <div class="asset-showcase">
            <div class="showcase-section">
              <h3>Brand Identity System</h3>
              <div class="logo-gallery">
                <img src="/portfolio/CloudSync Solutions/Cloudsync_logo-Variations.png" alt="CloudSync Logo Variations" />
              </div>
            </div>
            
            <div class="showcase-section">
              <h3>Color Strategy</h3>
              <div class="color-palette">
                <img src="/portfolio/CloudSync Solutions/Cloudsync-Color-Palette.png" alt="CloudSync Color Palette" />
              </div>
            </div>
            
            <div class="showcase-section full-width">
              <h3>Website Design & User Experience</h3>
              <div class="website-showcase">
                <div class="browser-frame">
                  <div class="browser-bar">
                    <div class="browser-dots">
                      <span></span>
                      <span></span>
                      <span></span>
                    </div>
                    <div class="url-bar">cloudsync-solutions.com</div>
                  </div>
                  <div class="browser-content">
                    <img src="/portfolio/CloudSync Solutions/Cloudsync_website_Mockup.png" alt="CloudSync Website Design" />
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="case-actions">
            <a href="/portfolio/CloudSync Solutions/Cloudsync Brand Guidelines.pdf" target="_blank" class="btn-primary">View Brand Guidelines</a>
            <a href="/contact" class="btn-secondary">Discuss Your Tech Project</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Momentum Personal Training Case Study -->
    <section class="case-study momentum-case" data-category="brand">
      <div class="case-study-header fitness-gradient">
        <div class="container">
          <div class="case-intro">
            <h2>Momentum Personal Training</h2>
            <p class="case-subtitle">Dynamic Fitness Brand Identity</p>
            <p class="case-description">Energizing a personal training business with a bold brand identity that motivates action and reflects the power of transformation.</p>
            <div class="case-stats">
              <div class="stat">
                <span class="stat-number">Bold</span>
                <span class="stat-label">Color Energy</span>
              </div>
              <div class="stat">
                <span class="stat-number">Multiple</span>
                <span class="stat-label">Logo Versions</span>
              </div>
              <div class="stat">
                <span class="stat-number">Complete</span>
                <span class="stat-label">Brand System</span>
              </div>
            </div>
          </div>
          <div class="case-hero-image">
            <img src="/portfolio/Momentum Personal Training/Momentum-logo.png" alt="Momentum Personal Training Logo" />
          </div>
        </div>
      </div>
      
      <div class="case-study-content">
        <div class="container">
          <div class="asset-showcase">
            <div class="showcase-section">
              <h3>Logo Variations & Flexibility</h3>
              <div class="logo-gallery">
                <img src="/portfolio/Momentum Personal Training/Momentum_log-variations.png" alt="Momentum Logo Variations" />
              </div>
            </div>
            
            <div class="showcase-section">
              <h3>Energetic Color Palette</h3>
              <div class="color-showcase">
                <img src="/portfolio/Momentum Personal Training/MOMENTUM- Color_Palette.png" alt="Momentum Color Palette" />
              </div>
            </div>
          </div>
          
          <div class="case-actions">
            <a href="/portfolio/Momentum Personal Training/Momentum Brand Guidelines.pdf" target="_blank" class="btn-primary">View Brand Guidelines</a>
            <a href="/contact" class="btn-secondary">Energize Your Brand</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Projects Section -->
    <section class="additional-projects">
      <div class="container">
        <h2>More Projects</h2>
        <div class="projects-grid">
          <!-- Social Media Management -->
          <article class="mini-project" data-category="social">
            <div class="mini-project-image">
              <div class="social-platforms">
                <div class="platform facebook">FB</div>
                <div class="platform instagram">IG</div>
                <div class="platform-count">+2</div>
              </div>
            </div>
            <div class="mini-project-content">
              <h4>Social Media Management</h4>
              <p>Strategic content creation and community management across multiple platforms.</p>
              <a href="/services/social-media-services" class="mini-link">Learn More →</a>
            </div>
          </article>

          <!-- Urban Thread Co. -->
          <article class="mini-project coming-soon" data-category="brand">
            <div class="mini-project-image fashion-bg">
              <div class="project-status">In Development</div>
              <h4>Urban Thread Co.</h4>
            </div>
            <div class="mini-project-content">
              <p>Contemporary fashion brand identity currently in development.</p>
              <span class="status-text">Case Study Coming Soon</span>
            </div>
          </article>

          <!-- Call to Action -->
          <article class="mini-project cta-project">
            <div class="mini-project-image cta-bg">
              <div class="cta-content">
                <h4>Your Project Next?</h4>
                <p>Let's create something amazing together.</p>
              </div>
            </div>
            <div class="mini-project-content">
              <a href="/contact" class="cta-button">Start Your Project</a>
            </div>
          </article>
        </div>
      </div>
    </section>

    <section class="success-metrics">
      <div class="container">
        <h2>Success by the Numbers</h2>
        <div class="metrics-grid">
          <div class="metric">
            <span class="metric-number">5+</span>
            <span class="metric-label">Brands Created</span>
          </div>
          <div class="metric">
            <span class="metric-number">3</span>
            <span class="metric-label">Industries Served</span>
          </div>
          <div class="metric">
            <span class="metric-number">100%</span>
            <span class="metric-label">Client Satisfaction</span>
          </div>
          <div class="metric">
            <span class="metric-number">Growing</span>
            <span class="metric-label">Portfolio</span>
          </div>
        </div>
      </div>
    </section>

    <section class="cta-section">
      <div class="container">
        <h2>Ready to Be Our Next Success Story?</h2>
        <p>Let's create something amazing together.</p>
        <a href="/contact" class="btn btn-primary">Start Your Project</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Smooth Scrolling */
  html {
    scroll-behavior: smooth;
  }
  
  /* Hero Section */
  .hero-section {
    background: var(--gradient-vibrant);
    color: white;
    padding: 6rem 0 4rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1), transparent 50%);
    pointer-events: none;
  }

  .lead {
    font-size: 1.5rem;
    margin: 1.5rem 0 3rem;
    font-weight: 300;
    opacity: 0.95;
  }

  .filter-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 0.75rem 2rem;
    background: rgba(255, 255, 255, 0.15);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.25);
    border-radius: 50px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: white;
    color: var(--primary-black);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  /* Case Study Sections */
  .case-study {
    margin-bottom: 8rem;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  }

  .case-study-header {
    padding: 6rem 0;
    background: linear-gradient(135deg, var(--gray-50), var(--gray-100));
    position: relative;
  }

  .case-study-header.tech-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .case-study-header.fitness-gradient {
    background: linear-gradient(135deg, #FF6B6B 0%, #4ECDC4 100%);
    color: white;
  }

  .case-study-header .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .case-intro h2 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .case-subtitle {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--accent-teal);
  }

  .tech-gradient .case-subtitle,
  .fitness-gradient .case-subtitle {
    color: rgba(255, 255, 255, 0.9);
  }

  .case-description {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .case-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .case-hero-image {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 3rem;
    backdrop-filter: blur(10px);
  }

  .case-hero-image img {
    max-width: 100%;
    max-height: 300px;
    object-fit: contain;
    filter: drop-shadow(0 8px 25px rgba(0, 0, 0, 0.15));
  }

  /* Case Study Content & Asset Showcase */
  .case-study-content {
    padding: 6rem 0;
  }

  .asset-showcase {
    display: grid;
    gap: 6rem;
  }

  .showcase-section {
    text-align: center;
  }

  .showcase-section.full-width {
    grid-column: 1 / -1;
  }

  .showcase-section h3 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 3rem;
    color: var(--primary-black);
  }

  .logo-gallery img,
  .applications-gallery img,
  .website-mockup img,
  .color-palette img,
  .color-showcase img {
    width: 100%;
    max-width: 800px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .logo-gallery img:hover,
  .applications-gallery img:hover,
  .website-mockup img:hover,
  .color-palette img:hover,
  .color-showcase img:hover {
    transform: scale(1.02);
  }

  /* Browser Frame for Website Showcases */
  .browser-frame {
    background: #f5f5f5;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    max-width: 1000px;
    margin: 0 auto;
  }

  .browser-bar {
    background: #e0e0e0;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .browser-dots {
    display: flex;
    gap: 6px;
  }

  .browser-dots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .browser-dots span:nth-child(1) { background: #ff5f57; }
  .browser-dots span:nth-child(2) { background: #ffbd2e; }
  .browser-dots span:nth-child(3) { background: #28ca42; }

  .url-bar {
    background: white;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 0.9rem;
    color: var(--gray-600);
    border: 1px solid #d0d0d0;
    flex: 1;
    max-width: 300px;
  }

  .browser-content img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Case Actions */
  .case-actions {
    text-align: center;
    margin-top: 4rem;
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: var(--gradient-vibrant);
    color: white;
    padding: 1rem 3rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    display: inline-block;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.2);
  }

  .btn-secondary {
    background: transparent;
    color: var(--primary-black);
    padding: 1rem 3rem;
    border: 2px solid var(--primary-black);
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-secondary:hover {
    background: var(--primary-black);
    color: white;
    transform: translateY(-3px);
  }

  /* Additional Projects */
  .additional-projects {
    padding: 6rem 0;
    background: var(--gray-50);
  }

  .additional-projects h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 4rem;
    color: var(--primary-black);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .mini-project {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
  }

  .mini-project:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .mini-project-image {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .social-platforms {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .platform {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.2rem;
  }

  .platform.facebook {
    background: #1877f2;
  }

  .platform.instagram {
    background: linear-gradient(45deg, #833ab4, #fd1d1d);
  }

  .platform-count {
    background: var(--gray-600);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
  }

  .fashion-bg {
    background: linear-gradient(135deg, #FF6B9D, #C44569);
    color: white;
    text-align: center;
    padding: 2rem;
  }

  .project-status {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    margin-bottom: 1rem;
    display: inline-block;
  }

  .cta-bg {
    background: var(--gradient-vibrant);
    color: white;
    text-align: center;
    padding: 2rem;
  }

  .cta-content h4 {
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
  }

  .mini-project-content {
    padding: 1.5rem;
  }

  .mini-project-content h4 {
    margin: 0 0 1rem 0;
    color: var(--primary-black);
  }

  .mini-link {
    color: var(--accent-teal);
    text-decoration: none;
    font-weight: 600;
  }

  .mini-link:hover {
    text-decoration: underline;
  }

  .status-text {
    color: var(--gray-500);
    font-style: italic;
    font-size: 0.9rem;
  }

  .cta-button {
    background: white;
    color: var(--primary-black);
    padding: 0.75rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .success-metrics {
    padding: 4rem 0;
    background: var(--gray-50);
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
    text-align: center;
  }

  .metric {
    display: flex;
    flex-direction: column;
  }

  .metric-number {
    font-size: 3rem;
    font-weight: bold;
    color: var(--primary-black);
  }

  .metric-label {
    font-size: 1.125rem;
    color: #666;
    margin-top: 0.5rem;
  }

  .cta-section {
    padding: 4rem 0;
    text-align: center;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s;
    margin-top: 1rem;
  }

  .btn-primary {
    background: var(--gradient-vibrant);
    color: white;
    box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .case-study-header .container {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .case-intro h2 {
      font-size: 2.5rem;
    }

    .case-stats {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 4rem 0 3rem;
    }

    .lead {
      font-size: 1.25rem;
    }

    .case-study-header {
      padding: 4rem 0;
    }

    .case-intro h2 {
      font-size: 2rem;
    }

    .case-study-content {
      padding: 4rem 0;
    }

    .asset-showcase {
      gap: 4rem;
    }

    .showcase-section h3 {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }

    .case-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.875rem 2rem;
      font-size: 1rem;
    }

    .case-stats {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .case-hero-image {
      padding: 2rem;
    }

    .browser-bar {
      padding: 8px 12px;
    }

    .url-bar {
      font-size: 0.8rem;
      padding: 6px 12px;
    }

    .filter-btn {
      padding: 0.5rem 1.5rem;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Portfolio filtering
  const filterButtons = document.querySelectorAll('.filter-btn');
  const portfolioItems = document.querySelectorAll('.portfolio-item');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.dataset.filter;
      
      // Update active button
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      
      // Filter items
      portfolioItems.forEach(item => {
        if (filter === 'all' || item.dataset.category === filter) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>